datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id
  name     String
  room     String
  messages Message[] @relation("UserMessages")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  room      String
  userId    String
  createdAt DateTime @default(now())

  user User @relation("UserMessages", fields: [userId], references: [id])
}
